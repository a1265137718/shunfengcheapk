<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center_horizontal"
  android:background="@drawable/driverregisterxml_bg">
 <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="110dp" 
  
   >

  </LinearLayout> 
  

 
  
  
 <EditText
  android:id="@+id/edit_licensenum"
  android:layout_width="252dp"
  android:layout_height="wrap_content"
  android:hint="驾驶证号"
  android:paddingLeft="45dp"
  android:textSize="15sp"
  android:background="@drawable/registerinput_driverregisterxml"/>
  
 
 
  
  <EditText
  android:id="@+id/edit_platenum"
  android:layout_width="252dp"
  android:layout_height="wrap_content" 
   android:hint="车牌号"
  android:paddingLeft="45dp"
  android:textSize="15sp"
  android:background="@drawable/registerinput_driverregisterxml"/>
    

 
  

 
  <ImageView
  android:id="@+id/image_in"
  android:paddingTop="10dp"
  android:layout_width="200dp"
  android:layout_height="150dp" 
  android:background="@null"
  android:src="@drawable/carimg_driverregisterxml"/>   

 
 <LinearLayout
  android:id="@+id/lin_submit"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:paddingTop="17dp"
 >
 <LinearLayout
  android:layout_width="150dp"
  android:layout_height="wrap_content"
  android:paddingLeft="45dp"
  >
 <Button
  android:id="@+id/submit_picture"
  android:layout_width="90dp"
  android:layout_height="40dp"
  android:background="@drawable/imgfilebtn_driverregisterxml"
  
 />
 </LinearLayout>
 <LinearLayout
  android:layout_width="150dp"
  android:layout_height="wrap_content"
  android:paddingLeft="20dp"
  >
  <Button
  android:id="@+id/submit_camera"
  android:layout_width="90dp"
  android:layout_height="40dp"
  android:background="@drawable/photobtn_driverregisterxml"
 
 />
 </LinearLayout>
 
 </LinearLayout>
 
  <LinearLayout
  android:id="@+id/lin_submit"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:paddingTop="6dp"
 >
 <Button
  android:id="@+id/submit_reg"
  android:layout_width="259dp"
  android:layout_height="50dp"
  android:background="@drawable/registerbtn_driverregisterxml"
 
 />
 
 </LinearLayout>
</LinearLayout>
